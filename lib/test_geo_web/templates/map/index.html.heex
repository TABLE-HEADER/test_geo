<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.0/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.3.0/dist/leaflet.js"></script>
  <script>
    function init() {
    var map = L.map('map').setView([<%=@location.lat %>, <%=@location.lng %>], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    L.marker([<%=@location.lat %>, <%=@location.lng %>]).addTo(map)
        .bindPopup("<%= @location.name %>")
        .openPopup();
    }
  </script>

<body onload="init()">
  <h1>地図表示</h1>
  <%= link to: Routes.map_path(@conn, :new) do %>
    <span>＜新規地点の登録＞</span>
  <% end %>
  <div id="map" style="width:720px;height:480px"></div>

  <table>
    <tr>
      <th>緯度</th>
      <th>経度</th>
      <th>地名</th>
      <th></th>
    </tr>
    <%= for l <- @locations do %>
        <tr>
          <td><%= l.lat %></td>
          <td><%= l.lng %></td>
          <td><%= l.name %></td>
          <td>
            <%= link "詳細", to: Routes.map_path(@conn, :index) %>
            | <%= link "編集", to: Routes.map_path(@conn, :index) %>
            | <%= link "削除", to: Routes.map_path(@conn, :delete), data: [id: l.id] %>
          </td>
        </tr>
    <% end %>
  </table>
</body>